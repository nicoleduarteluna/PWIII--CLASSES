import java.time.LocalDate;
import java.time.ZoneId;
import java.time.temporal.ChronoUnit;
import java.util.Date;

public class Tarefa {
	public Long id;
	public String titulo;
	public String descricao;
	public Date dataPrevista;
	
	public String toString () {
		return String.format("Título: %s \nDescrição: %s \nData Prevista: %s \n Dias: %s" , titulo, descricao, dataPrevista, getDias());
	}
	
	public long getDias() {
		LocalDate localDataPrevista = dataPrevista.toInstant()
												  .atZone(ZoneId.systemDefault())
												  .toLocalDate();
		return LocalDate.now().until(localDataPrevista, ChronoUnit.DAYS);
				
	}
	

}
